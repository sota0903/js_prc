# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

[*.{css,scss,less}]
indent_size = 2

[_*.ejs]
insert_final_newline = false

[*.{js,ts,coffee,php}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
